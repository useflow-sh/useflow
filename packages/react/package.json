{
  "name": "@useflow/react",
  "version": "0.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown",
