{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "cache": true,
      "persistent": false,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false,
      "persistent": false
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**",
        "!dist/**",
        "!.turbo/**"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    }
  }
}
